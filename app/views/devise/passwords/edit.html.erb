<h2>更改您的密码</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%#= devise_error_messages! %>
  <%= render 'layouts/error_messages', object: f.object %>

  <%= f.hidden_field :reset_password_token %>

  <div class="control-group">
    <%= f.label :password, '新密码', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password_confirmation, '确认新密码', :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "更改我的密码", :class => "btn btn-primary", 'data-disable-with' => "正在更改"%>
    </div>
  </div>

<% end %>

<%= render :partial => "devise/shared/links" %>

<div class="page-header">
  <h1>记事一览<h1>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>标题</th>
    <th>内容</th>
    <th>创建时间</th>
    <th>更新时间</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @notepads.each do |notepad| %>
  <tr>
    <td><%= truncate(notepad.title, :length => 10) %></td>
    <td><%= truncate(notepad.content, :length => 25) %></td>
    <td><%= notepad.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
    <td><%= notepad.updated_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
    <td>
      <%= link_to notepad do %>
        <span class="label label-info">详细</span>
      <% end %>
    </td>
    <td>
      <%= link_to edit_notepad_path(notepad) do %>
        <span class="label label-success">编辑</span>
      <% end %>
    <td>
      <%= link_to notepad, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <span class="label label-important">删除</span>
      <% end %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

<%= paginate @notepads %>

<br />

<%= link_to '新记事', new_notepad_path, :class => 'btn btn-primary' %>
